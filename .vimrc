"basic settings"
set cursorline
set history=50
set laststatus=2
set nocompatible
set number
set mouse=a
set ruler

"colors"
colorscheme jellybeans
set background=dark
set t_Co=256
syntax on

"tab settings"
set autoindent
set expandtab
set shiftwidth=2
set smarttab
set smartindent
set tabstop=2

"search settings"
set incsearch
set ignorecase
set hlsearch
set showmatch
set smartcase

"key mappings"
set pastetoggle=<F2>
